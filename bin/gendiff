#!/usr/bin/env php
<?php

//require __DIR__.'/../vendor/autoload.php';
$autoloadPath1 = __DIR__ . '/../../../autoload.php';
$autoloadPath2 = __DIR__ . '/../vendor/autoload.php';
if (file_exists($autoloadPath1)) {
    require_once $autoloadPath1;
} else {
    require_once $autoloadPath2;
}

use function Differ\Differ\parsers\decoderJsonInPhp;
use function Differ\Differ\parsers;
use function Differ\Differ\diff\diffArray;
use function Differ\Differ\Render\render;
use function Differ\Differ\Render\converter;


$doc = <<<DOC
Generate diff

Usage:
  gendiff  (-h|--help)
  gendiff  (-v|--version)
  gendiff  [--format <fmt>] <firstFile> <secondFile>

Options:
  -h --help  	  	 Show this screen.
  -v --version    	 Show version.
  --format <fmt>   	 Report format [default: pretty]   
DOC;

$args = Docopt::handle($doc, array('version'=>'Generate diff v0.01'));

foreach ($args as $k=>$v)
	echo $k.': '.json_encode($v).PHP_EOL;


[$array1, $array2] = decoderJsonInPhp($args['<firstFile>'], $args['<secondFile>']);

$tree = diffArray($array1, $array2);

$render = render($tree, 3);
//print_r($render);

$renderWithBrackets = converter($render);

print_r($renderWithBrackets);


